using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace Consumo
{
    class Program
    {
        static void Main(string[] args)
        {
            string x = Console.ReadLine();
            int X = Convert.ToInt32(x);

            string y = Console.ReadLine();
            decimal Y = Convert.ToDecimal(y);

            decimal distancia = X / Y;
            string D = Convert.ToDecimal(distancia).ToString("0.000");

            Console.WriteLine("{0} km/l", D);
            Console.ReadKey();


        }
    }
}
